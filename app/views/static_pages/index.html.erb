<section class="todoapp">
  <header class="header">
    <h1>Spa</h1>
    <input class="new-todo" placeholder="What needs to be done?" autofocus="">
  </header>
  <section class="main">
    <ul class="todo-list">
   <li>
      <div class="view"><input class="toggle" type="checkbox"><label>Do laundry</label></div>
   </li>
   <li>
      <div class="view"><input class="toggle" type="checkbox"><label>Make bed</label></div>
   </li>
</ul>
  </section>
</section>

<script>
  $(function() {
    $.get("/tasks").success( function( data ) {
      var htmlString = "";
      //  lists each task 
      $.each(data, function(index,  task) {
        // pulls task that have been cheked
        var checkedStatus = task.done? "checked" : "";
        // pulls the "li" variable from todo
        var liElement = '<li><div class="view"><input class="toggle" type="checkbox"' +
        checkedStatus +
        '><label>' +
         task.title +
         '</label></div></li>';
        htmlString += liElement;
      });
      // pulls the "ul" variable from todo
      var ulTodos = $('.todo-list');
      ulTodos.html(htmlString);

    });
  });
</script>